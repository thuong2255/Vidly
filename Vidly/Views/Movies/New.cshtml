@model Vidly.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movies</h2>

@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Name)
        @Html.TextBoxFor(x => x.Movie.Name, new {@class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Genre )
        @Html.DropDownListFor(x => x.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Movie.ReleaseDate)
        @Html.TextBoxFor(x => x.Movie.ReleaseDate, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Movie.DateAdded)
        @Html.TextBoxFor(x => x.Movie.DateAdded,new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Movie.NumberInStock)
        @Html.TextBoxFor(x => x.Movie.NumberInStock, new {@class = "form-control"})
    </div>
    @Html.HiddenFor(x => x.Movie.Id)
    <button class="btn btn-primary">Save</button>
}
